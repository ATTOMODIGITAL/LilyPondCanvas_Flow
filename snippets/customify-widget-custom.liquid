<script>
  console.log('run customize')
  setTimeout(function(){
    cstJquery('#admin-bar-iframe').remove()
  },2000)
  document.addEventListener('cstRemoveObjText',function(item){
    cstJquery('#tab-ref-add_image').show()
  })
  document.addEventListener('cstRemoveObjImage',function(item){
    cstJquery('#tab-ref-add_text').show()
  })

  cstJquery('#cst-insert-text').on('click',function(){
    cstJquery('#tab-ref-add_image').hide()
  })

  cstJquery(document).on('click','#image_preview img', function(){
    cstJquery('#tab-ref-add_text').hide()
  })
</script>